package test;

import java.util.HashMap;
import java.util.Map;
import java.util.Scanner;

public class user {
	private Map<String, String> users;

	public user() {
		this.users = new HashMap<>();
	}

	public void registerUser(String email, String pwd) {
		users.put(email, pwd);
	}

	private boolean userExists(String email) {
		if (users.containsKey(email)) {
			return true;
		}
		return false;
	}
	
	private void newPassword(String email, String pwd) {
		users.replace(email, pwd);
	}

	private boolean login(String email, String pwd) {
		if (users.containsKey(email) && users.get(email).equals(pwd)) {
			return true;
		}
		return false;
	}

	public static void main(String args[]) {
		user u = new user();
		Scanner sc = new Scanner(System.in);

		System.out.println("Press 1 for Registering User. Press 2 for Forgot Password");

		int op = sc.nextInt();

		if (op == 1) {

			System.out.println("Enter your email: ");
			String email = sc.nextLine();

			System.out.println("Enter your password: ");
			String pwd = sc.nextLine();

			u.registerUser(email, pwd);

		}

		if (op == 2) {

			System.out.println("Enter your email: ");
			String loginemail = sc.nextLine();

			if (u.userExists(loginemail)) {
				System.out.println("Email Sent Successfully\n");

				System.out.println("Enter your password: ");
				String loginpwd = sc.nextLine();
				
				u.newPassword(loginemail, loginpwd);

				if (u.login(loginemail, loginpwd)) {
					System.out.println("Login Successful");
				} else {
					System.out.println("Invalid email or password");
				}
			}

			sc.close();
		}

	}
}
